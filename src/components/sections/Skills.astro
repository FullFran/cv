---
import Section from "../Section.astro";
import SkillsLanguages from "../SkillsLanguages.astro";
import { skills, languages } from "@cv";

const skillGroups = [
  {
    title: "AI & Intelligent Systems",
    skills: [
      "AI Systems Architecture",
      "LLMs, LangChain, RAG",
      "OpenAI API",
      "Workflow Automation with n8n",
    ],
  },
  {
    title: "Backend, Frontend & Infrastructure",
    skills: [
      "Python, FastAPI",
      "Git, Docker, CI/CD",
      "Vector Databases (Qdrant, Weaviate)",
      "Hetzner, GCP",
      "React, Astro, Tailwind CSS",
    ],
  },
];

const languageItems = languages.map((lang) => {
  const fluency = lang.fluency ? ` (${lang.fluency})` : "";
  return `${lang.language}${fluency}`;
});

const languagesGroup = {
  title: "Languages",
  skills: languageItems,
};
---

<Section title="Technical Skills">
  <SkillsLanguages groups={skillGroups} />
</Section>

<Section title="Languages">
  <div class="grid grid-cols-2 text-xs text-gray-800">
    <div>
      <p class="font-semibold">Spanish</p>
      <p class="text-gray-600">Native</p>
    </div>
    <div>
      <p class="font-semibold">English</p>
      <p class="text-gray-600">B2 (Anglia)</p>
    </div>
  </div>
</Section>
